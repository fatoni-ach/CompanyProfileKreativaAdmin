<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="22dp"
        android:fontFamily="serif"
        android:text="Welcome"
        android:textSize="40sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView4"
        android:layout_marginStart="0dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/IB_home_cp"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:scaleType="fitStart"
                    android:onClick="onCompanyProfile"
                    android:elevation="100dp"
                    app:srcCompat="@drawable/company_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Company Profile"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_bt"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/trans"
                    android:onClick="onBeritaTerbaru"
                    android:scaleType="fitStart"
                    android:elevation="100dp"
                    app:srcCompat="@drawable/berita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Posting"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/IB_home_fasilitas"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:onClick="onFasilitas"
                    android:scaleType="fitStart"
                    android:elevation="100dp"
                    android:src="@drawable/fasilitas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fasilitas"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <ImageButton
                    android:id="@+id/IB_home_gallery"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:onClick="onGallery"
                    android:scaleType="fitStart"
                    android:elevation="100dp"
                    android:src="@drawable/gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gallery"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_product"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:onClick="onProduct"
                    android:scaleType="fitStart"
                    android:elevation="100dp"
                    android:src="@drawable/product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product"
                    android:textSize="13sp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_portofolio"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:onClick="onPortofolio"
                    android:scaleType="fitStart"
                    android:elevation="100dp"
                    app:srcCompat="@drawable/portofolio2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Portofolio"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>