<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".HomeActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        app:cardCornerRadius="15dp"
        android:paddingTop="10dp"
        android:outlineAmbientShadowColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_height="80dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Admin, "
                android:textColor="@color/black"
                android:layout_marginTop="9dp"
                android:gravity="center"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="PT Kreativa Solusindo"
                android:textColor="@color/black"
                android:layout_gravity="center"
                android:textSize="28sp"
                android:textStyle="bold" />

        </LinearLayout>
    </android.support.v7.widget.CardView>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="120dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_cp"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onCompanyProfile"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/company_profile" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:text="Company Profile"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_bt"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:layout_weight="1"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onBeritaTerbaru"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/berita" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Posting"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_fasilitas"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onFasilitas"
                    android:scaleType="fitStart"
                    android:src="@drawable/fasilitas" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Fasilitas"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_gallery"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onGallery"
                    android:scaleType="fitStart"
                    android:src="@drawable/gallery" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Gallery"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_product"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onProduct"
                    android:scaleType="fitStart"
                    android:src="@drawable/product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_portofolio"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onPortofolio"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/portofolio2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Portofolio"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/IB_home_event"
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onEvent"
                    android:scaleType="fitStart"
                    android:src="@drawable/event" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Event"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onProduct"
                    android:scaleType="fitStart"
                    android:src="@drawable/product" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Product"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:visibility="invisible"
                android:orientation="vertical">

                <ImageButton
                    android:layout_width="80dp"
                    android:layout_height="85dp"
                    android:layout_gravity="center"
                    android:background="@color/trans"
                    android:elevation="100dp"
                    android:onClick="onPortofolio"
                    android:scaleType="fitStart"
                    app:srcCompat="@drawable/portofolio2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Portofolio"
                    android:textColor="@color/black"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <Button
        android:id="@+id/BT_home_logout"
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:backgroundTint="@color/button"
        android:onClick="onLogout"
        android:textColor="@color/white"
        android:text="Logout" />

</RelativeLayout>