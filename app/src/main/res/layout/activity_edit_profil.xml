<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".EditProfilActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/bar">

        <Button
            android:id="@+id/BT_pp_batal"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="@color/button"
            android:onClick="onBatal"
            android:layout_gravity="center"
            android:text="batal"
            android:textSize="12sp"
            android:elevation="100dp"
            android:textColor="@color/txt_button"
            android:visibility="visible" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:text="Profile"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/BT_pp_simpan"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:background="@color/button"
            android:onClick="onEdit"
            android:layout_margin="3dp"
            android:text="Simpan"
            android:elevation="100dp"
            android:layout_gravity="center"
            android:textColor="@color/txt_button"
            android:visibility="visible" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true">
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/profile_profil"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_namap"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="Nama Perusahaan"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/alamat"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_alamatp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="Alamat"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/telp"/>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_notelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="No Telp"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                    <!--<EditText-->
                    <!--android:id="@+id/ET_pp_notelp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:text="No Telp"-->
                    <!--android:textSize="18sp" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/email"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="Email"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <!--<EditText-->
                    <!--android:id="@+id/ET_pp_email"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:text="Email"-->
                    <!--android:textSize="18sp" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/wa"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_wa"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="Whatsapp/6285*********"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <!--<EditText-->
                    <!--android:id="@+id/ET_pp_email"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:text="Email"-->
                    <!--android:textSize="18sp" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/instagram"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_instagram"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="Instagram"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>

                    <!--<EditText-->
                    <!--android:id="@+id/ET_pp_instagram"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center"-->
                    <!--android:layout_marginLeft="10dp"-->
                    <!--android:text="Instagram"-->
                    <!--android:textSize="18sp" />-->
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="12dp"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_gravity="top"
                        android:src="@drawable/deskripsi"/>
                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/trans2"
                        android:layout_marginRight="10dp"
                        android:layout_alignParentBottom="true">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/ET_pp_deskripsi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:gravity="left"
                            android:hint="tentang Perusahaan"
                            android:textSize="14sp" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

                <!--<EditText-->
                <!--android:id="@+id/ET_pp_deskripsi"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginLeft="10dp"-->
                <!--android:inputType="textMultiLine"-->
                <!--android:text="Deskripsi Perusahaan"-->
                <!--android:textSize="18sp" />-->
            </LinearLayout>


        </android.support.v7.widget.CardView>
    </ScrollView>






</RelativeLayout>